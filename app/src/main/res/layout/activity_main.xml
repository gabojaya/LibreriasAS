<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="24dp"
        tools:context=".MainActivity">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Librerías de Imágenes"
            android:textSize="28sp"
            android:textStyle="bold"
            android:layout_marginBottom="32dp"/>

        <Button
            android:id="@+id/btnGlide"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="1. Glide (Carga y Transformación)"
            android:layout_marginBottom="16dp"/>

        <Button
            android:id="@+id/btnUCrop"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="2. uCrop (Recorte de Imagen)"
            android:layout_marginBottom="16dp"/>

        <Button
            android:id="@+id/btnGpuImage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="3. GpuImage" />

    </LinearLayout>

  </androidx.constraintlayout.widget.ConstraintLayout>